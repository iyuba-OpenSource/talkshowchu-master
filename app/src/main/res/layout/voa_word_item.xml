<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/word_item_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/word_speaker"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerInside"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/wordtest_speaker_anim_back"
        android:src="@drawable/wordtest_speaker_anim" />

    <RelativeLayout
        android:id="@+id/rl_word"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:descendantFocusability="blocksDescendants"
        android:padding="8dp">

        <LinearLayout
            android:id="@+id/ll_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/word_key"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="TextView"
                android:textColor="#414141"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/word_pron"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="TextView"
                android:textColor="#414141"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/word_def"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_word"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="text"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

    </RelativeLayout>

</LinearLayout>
